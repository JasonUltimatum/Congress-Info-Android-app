<?xml version="1.0" encoding="UTF-8"?>
<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:id="@android:id/background">
        <shape>
            <corners
                android:radius="5dip" />
            <gradient
                android:startColor="#8D8F8D"
                android:centerY="0.50"
                android:endColor="#8D8F8D"
                android:angle="270" />
        </shape>
    </item>
    <item
        android:id="@android:id/progress">
        <clip>
            <shape>
                <corners
                    android:radius="5dip" />
                <gradient
                    android:startColor="#FBC039"
                    android:centerColor="#FAB537"
                    android:endColor="#FBC039"
                    android:angle="-90" />
            </shape>
        </clip>
    </item>
</layer-list>